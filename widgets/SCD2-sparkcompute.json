{
  "metadata": {
    "spec-version": "1.5"
  },
  "configuration-groups": [
    {
      "label": "Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Key",
          "name": "key"
        },
        {
          "widget-type": "textbox",
          "label": "Start Date Field",
          "name": "startDateField"
        },
        {
          "widget-type": "textbox",
          "label": "End Date Field",
          "name": "endDateField"
        },
        {
          "widget-type": "textbox",
          "label": "End Date Offset",
          "name": "endDateOffset",
          "widget-attributes" : {
            "default": "1us"
          }
        },
        {
          "widget-type": "toggle",
          "name": "fillInNull",
          "label": "Fill In Null",
          "widget-attributes": {
            "default": "false",
            "on": {
              "value": "true",
              "label": "True"
            },
            "off": {
              "value": "false",
              "label": "False"
            }
          }
        },
        {
          "widget-type": "toggle",
          "name": "deduplicate",
          "label": "Deduplicate",
          "widget-attributes": {
            "default": "false",
            "on": {
              "value": "true",
              "label": "True"
            },
            "off": {
              "value": "false",
              "label": "False"
            }
          }
        },
        {
          "widget-type": "csv",
          "name": "blacklist",
          "label": "Black List",
          "widget-attributes": {
            "delimiter": ",",
            "value-placeholder": "Field Name"
          }
        },
        {
          "widget-type": "toggle",
          "name": "preserveTarget",
          "label": "Preserve Target",
          "widget-attributes": {
            "default": "false",
            "on": {
              "value": "true",
              "label": "True"
            },
            "off": {
              "value": "false",
              "label": "False"
            }
          }
        },
        {
          "widget-type": "textbox",
          "label": "Target Field",
          "name": "isTargetField"
        },
        {
          "widget-type": "textbox",
          "label": "Number of Partitions",
          "name": "numPartitions"
        }
      ]
    }
  ],
  "filters": [
    {
      "name": "Deduplicate Enabled",
      "condition": {
        "property": "deduplicate",
        "operator": "equal to",
        "value": "true"
      },
      "show": [
        {
          "name": "blacklist",
          "type": "property"
        },
        {
          "name": "preserveTarget",
          "type": "property"
        },
        {
          "name": "isTargetField",
          "type": "property"
        }
      ]
    },
    {
      "name": "Preserve Enabled",
      "condition": {
        "property": "preserveTarget",
        "operator": "equal to",
        "value": "true"
      },
      "show": [
        {
          "name": "isTargetField",
          "type": "property"
        }
      ]
    }
  ]
}
